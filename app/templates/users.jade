extends ./patterns/layout.jade

block include_css
	link(rel="stylesheet", href="../../static/css/list.css")

block content
	.wrap
		nav
			.nav-wrapper
				.center
					a(href="/").breadcrumb Главная
					a(href="/users").breadcrumb Пользователи

		section.list-objects-section.z-depth-1.container.section
			.row
				each user in users
					.col.l3.m6.s12
						.card
							.card-image.waves-effect.waves-block.waves-light
								a(href="users/#{user.id}")
									.list-object-image(style="background-image: url(#{user.img});")

							.card-content
								span.card-title.activator.grey-text.text-darken-4.truncate=user.name
							
							.card-reveal
								span.card-title.activator.grey-text.text-darken-4=user.name
								p.activator= user.description